FROM ruby:2.5

WORKDIR /var/www/app

RUN apt-get update -qq 
RUN apt-get install -y build-essential libpq-dev nodejs default-libmysqlclient-dev
RUN gem install bundler
RUN bundler install

RUN bunle exec rake db:create
RUN bunle exec rake db:migrate

EXPOSE 3000

CMD ["bundle", "exec", "rails", "s", "-p", "3000"]

